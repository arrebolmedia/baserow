# Variables de entorno para desarrollo local de Baserow
SECRET_KEY=baserow_dev_secret_key_2025
DATABASE_PASSWORD=baserow_dev_db_password
REDIS_PASSWORD=baserow_dev_redis_password

# UID y GID para Docker en Windows (usar 0 para evitar conflictos)
UID=0
GID=0

# URLs de desarrollo
BASEROW_PUBLIC_URL=http://localhost:3000
PUBLIC_BACKEND_URL=http://localhost:8000
PUBLIC_WEB_FRONTEND_URL=http://localhost:3000

# Puertos para desarrollo
WEB_FRONTEND_PORT=4000
WEB_FRONTEND_SSL_PORT=4443
MEDIA_URL=http://localhost:4000/media/

# Configuración de PostgreSQL para desarrollo
POSTGRES_DEV_EXTRA_ARGS="-c shared_buffers=512MB -c fsync=off -c full_page_writes=off -c synchronous_commit=off"

# Habilitar funcionalidades premium (por defecto están habilitadas)
# BASEROW_OSS_ONLY=false  # Comentado para permitir premium por defecto